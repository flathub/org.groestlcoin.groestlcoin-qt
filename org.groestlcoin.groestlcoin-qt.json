{
  "id": "org.groestlcoin.groestlcoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "command": "groestlcoin-qt",
  "finish-args": [
    /* Xorg support */
    "--socket=x11",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network",
    /* Tor auth cookie */
    "--filesystem=/run/tor/control.authcookie:ro",
    "--filesystem=/var/run/tor/control.authcookie:ro"
  ],
  "modules": [
    {
      "name": "groestlcoin-core",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoind",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-qt",
        "install -m 0744 -D -t /app/bin/internal bin/groestlcoin-cli"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v22.0/groestlcoin-22.0-x86_64-linux-gnu.tar.gz",
          "sha256": "b30c5353dd3d9cfd7e8b31f29eac125925751165f690bacff57effd76560dddd"
        },
        {
          "type": "archive",
          "only-arches": ["arm"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v22.0/groestlcoin-22.0-arm-linux-gnueabihf.tar.gz",
          "sha256": "823520bd8c0b75aee99321ce42109577deaeefb521e469ab2d43f2652640b1ab"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://github.com/Groestlcoin/groestlcoin/releases/download/v22.0/groestlcoin-22.0-aarch64-linux-gnu.tar.gz",
          "sha256": "8ab192b779a694701c0e8e990162a59adac7c9694ec6fc982a49a69dc3726706"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.desktop /app/share/applications/org.groestlcoin.groestlcoin-qt.desktop",
        "install -Dp -m 644 groestlcoin.svg /app/share/icons/hicolor/scalable/apps/org.groestlcoin.groestlcoin-qt.svg",
        "install -Dp -m 644 org.groestlcoin.groestlcoin-qt.metainfo.xml /app/share/metainfo/org.groestlcoin.groestlcoin-qt.metainfo.xml",
        "bash install_wrappers.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.desktop"
        },
        {
          "type": "file",
          "path": "org.groestlcoin.groestlcoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/Groestlcoin/groestlcoin/22.0.0/src/qt/res/src/groestlcoin.svg",
          "sha256": "a10bfc28ed6e4fb494743986858e03cba08514572e1b22e1bf17a7f5080d591f"
        },
        {
          "type": "file",
          "path": "install_wrappers.sh"
        }
      ]
    }
  ]
}
